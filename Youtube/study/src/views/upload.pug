extends base
block content
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*" required, id="video", name="video")
        input(placeholder="Title", required, type="text", maxlength=80, name="title")
        input(placeholder="Description", required, type="text", minlength=20, name="description")
        input(placeholder="Hashtags, seperated by comma", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")